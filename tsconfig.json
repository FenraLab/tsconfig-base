{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Base Config",
  "compilerOptions": {
    "outDir": "./dist",
    "module": "nodenext",
    "target": "esnext",
    "sourceMap": true,
        
    "skipLibCheck": true,
    "rewriteRelativeImportExtensions": true,
    "esModuleInterop": true,
"isolatedModules": true,

  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "old"],
  "lib": ["ES2015"],
}
