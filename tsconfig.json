{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Base Config",
  "compilerOptions": {
    "outDir": "./dist",
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",

    "skipLibCheck": true,
    "esModuleInterop": true,

    "experimentalDecorators": false,
    "emitDecoratorMetadata": false,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "old"],
  "lib": ["ES2015"],
}
